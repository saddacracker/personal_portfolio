extends ../layouts/default

block content
    .container.gallery-item-detail-page: .row: .col-md-12
        if !data.item
            h2 Dayhum! Something just aint right.
        else
            .row
                .col-md-3.gallery-item-details
                    h1.gallery-detail-title= data.item.name
                    p.gallery-detail-description= data.item.content.extended
                
                .col-md-9   
                    each image in data.item.images
                        .gallery-image: img(src=image.limit(1140,2000))

